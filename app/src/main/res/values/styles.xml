<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EstiloVertical">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/layoutVertical</item>
    </style>

    <style name="EstiloHorizontal">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/layoutHorizontal</item>
    </style>

    <style name="EstiloContentHeight">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EstiloContentHeight.radio">
        <item name="android:layout_width">@dimen/width</item>
    </style>

    <style name="EstiloContentHeight.radio.Text">
        <item name="android:textSize">@dimen/textSize</item>

    </style>

    <style name="EstiloContentHeight.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/genbas</item>
    </style>

    <style name="EstiloContentHeight.Group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>



    <style name="boton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="resultado">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Tema2" parent="AppTheme" >
        <item name="android:colorPrimary">@color/primary_material_light</item>
        <item name="android:colorAccent">@color/accent_material_light</item>
    </style>
</resources>
